---
import { Image } from "astro:assets";

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  image?: string | any;
  alt?: string;
}

const {
  image = await Astro.slots.render("image"),
  alt,
} = Astro.props;
---

<div class="flex flex-col items-center max-w-5xl pt-[74px] px-1">
  <Image
    class="rounded-md w-[160px] lg:w-[200px] shake-vertical"
    width={200}
    height={200}
    loading="lazy"
    decoding="async"
    alt={alt}
    {...image}
  />

  <div class="flex flex-col gap-4 text-center items-center">
    <slot name="title" />
    <slot name="subtitle" />
    <slot name="content" />
  </div>
</div>
