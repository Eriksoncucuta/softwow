---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import History from "../components/History.astro";
import ValueProposal from "../components/ValueProposal.astro";
import Services from "../components/Services.astro";
import Partners from "../components/Partners.astro";
import CtaSection from "../components/CtaSection.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
---

<Layout title="Softwow">
  <div class="background-fixed"></div>
  <Navbar
    links={[
      { text: "Inicio", href: "#home", ariaLabel: "home" },
      { text: "Historia", href: "#history", ariaLabel: "history" },
      { text: "Servicios", href: "#services", ariaLabel: "services" },
      { text: "Aliados", href: "#partners", ariaLabel: "partners" },
    ]}
  />
  <Hero />

  <main class="slide-in-top px-4 flex flex-col gap-10 lg:gap-20 pt-10 lg:pt-40">
    <History />
    <Partners />
    <CtaSection />
  </main>
  <Footer />
  <WhatsAppButton />
</Layout>

<style>
  .background-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url("/image/bg-softwow-2.jpg") no-repeat center center;
    background-size: cover;
    z-index: -10;
  }
</style>